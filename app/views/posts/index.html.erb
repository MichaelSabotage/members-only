<div>
  <% if signed_in? %>
  <%= link_to "#{current_user.name} Sign out", signout_path, data: { "turbo-method": :delete } %>
  <% else %>
    <%= link_to 'Sign in', signin_path %>
  <% end %>
</div>

<h1>Members Only Posts</h1>

<% @posts.each do |post| %>
  <% if signed_in? %>
    <p>
      Posted by:
      <%= post.user.name %>
    </p>
  <% end %>
  <h4><%= post.title %></h4>  
  <p><%= post.body %></p>
<% end %>

<% if signed_in? %>
  <%= link_to "Create a Post", new_post_path %>
<% end %>